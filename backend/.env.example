# PPF Workshop Monitoring System — Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# =============================================================
# ENVIRONMENT
# =============================================================
ENVIRONMENT=development
DEBUG=true

# =============================================================
# DATABASE (PostgreSQL)
# =============================================================
DATABASE_USER=ppf_user
DATABASE_PASSWORD=your_secure_db_password_here
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=ppf_monitoring
# Full URL (alternative — overrides individual fields above)
# DATABASE_URL=postgresql://ppf_user:password@localhost:5432/ppf_monitoring

# =============================================================
# JWT / AUTHENTICATION
# =============================================================
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=your_256_bit_secret_key_here_generate_with_secrets_module
JWT_ALGORITHM=HS256

# =============================================================
# MQTT BROKER
# =============================================================
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883
MQTT_USERNAME=ppf_backend
MQTT_PASSWORD=your_mqtt_password_here

# =============================================================
# MEDIAMTX (Video Server)
# =============================================================
MEDIAMTX_HOST=localhost
MEDIAMTX_API_PORT=9997
# Secret for stream token signing
STREAM_TOKEN_SECRET=your_stream_token_secret_here

# =============================================================
# TWILIO (SMS Notifications) — Required when sms_notifications.enabled=true
# =============================================================
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_FROM_NUMBER=+1234567890

# =============================================================
# SMTP (Email Notifications) — Required when email_notifications.enabled=true
# =============================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password_here
SMTP_FROM_NAME=PPF Monitor

# =============================================================
# RAZORPAY (Payment Gateway) — Phase 3
# =============================================================
RAZORPAY_KEY_ID=rzp_live_xxxxxxxxxx
RAZORPAY_KEY_SECRET=your_razorpay_secret_here

# =============================================================
# SUPER ADMIN (First-run setup)
# =============================================================
SUPER_ADMIN_USERNAME=super_admin
SUPER_ADMIN_PASSWORD=your_super_admin_password_here
SUPER_ADMIN_EMAIL=admin@ppf-monitor.com

# =============================================================
# APPLICATION IDENTITY
# =============================================================
APP_NAME=PPF Workshop Monitoring System
APP_VERSION=1.0.0

# =============================================================
# ACCESS TOKEN LIFETIMES
# =============================================================
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================
# CORS (comma-separated allowed origins)
# =============================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# =============================================================
# DOCKER / PGADMIN (only used in docker-compose.yml dev profile)
# =============================================================
PGADMIN_EMAIL=admin@ppf.local
PGADMIN_PASSWORD=pgadmin_dev_password

# =============================================================
# CONFIG PATH (optional — defaults to config/settings.yaml)
# =============================================================
# CONFIG_PATH=config/settings.yaml
